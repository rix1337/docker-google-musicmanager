#!/bin/bash

PASSWORD=${PASSWORD:-GoogleMusic}
PORT=${PORT:-5900}
DISPLAY=:0

echo "Setting up Display"
Xvfb :0 -screen 0 1280x720x24 &
echo "Starting Google MusicManager"
DISPLAY=:0 google-musicmanager -s /music &
sleep 5
echo "Starting VNC Server"
x11vnc -passwd $PASSWORD -display :0 -N -rfbport $PORT -forever &
DISPLAY=:0 google-musicmanager -s /music &
